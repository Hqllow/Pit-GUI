{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "experimentalDecorators": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["src/**/*.spec.ts", "node_modules"]
}
